---
interface Props {
  title: string;
  description: string;
  date: string;
  company: string;
}

const { title, description, date, company } = Astro.props;
---

<span class="absolute size-4 bg-red-500 rounded-full -start-2 dark:bg-red-500">
</span>
<div class="flex flex-col md:flex-row w-full gap-8">
  <div class="min-w-[30%]">
    <h2
      class="flex items-center mb-1 text-lg font-semibold text-red-500 -top-1 relative"
    >
      {title}
    </h2>
    <h2
      class="block mb-2 text-md font-semibold leading-none text-gray-800 dark:text-gray-300"
    >
      {company}
    </h2>
    <h1 class="block text-sm text-gray-400">
      {date}
    </h1>
  </div>
  <p
    class="mb-4 text-base font-normal text-gray-700 dark:text-gray-200 text-pretty"
  >
    {description}
  </p>
</div>
