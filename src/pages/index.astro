            class="hover:scale-110 bg-gray-100 dark:bg-black dark:text-white dark:border-gray-800 dark:hover:bg-white dark:hover:border-gray-100 dark:hover:text-black rounded-full drop-shadow-md
            py-1 px-4 border-gray-300 border flex flex-row gap-2 items-center transition text-black hover:bg-black hover:border-gray-100 hover:text-white"
            ><svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="size-5"
            >
              <path
                stroke-linecap="round"
